<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_grey_white">

    <ImageView
        android:id="@+id/top_logo"
        android:layout_width="210dp"
        android:layout_height="74dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/top_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/start_toplogo" />

    <ImageView
        android:id="@+id/government_logo"
        android:layout_width="298dp"
        android:layout_height="186dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/government_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_logo"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/start_fhmlogo" />

    <ImageButton
        android:id="@+id/btn_bankid"
        android:layout_width="314dp"
        android:layout_height="67dp"
        android:contentDescription="@string/login_with_bank_id"
        android:src="@drawable/login_with_bank_id_text"
        android:backgroundTint="#FEFEFE"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/government_logo"
        app:layout_constraintVertical_bias="0.847"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="99dp"
        android:background="#FEFEFE"
        android:contentDescription="@string/video_icon"
        app:layout_constraintBottom_toTopOf="@+id/btn_bankid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/government_logo"
        app:srcCompat="@drawable/login_video_icon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="51dp"
        android:layout_height="44dp"
        android:contentDescription="@string/QR_scanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        app:srcCompat="@drawable/login_scanqr_btn" />

    <TextView
        android:id="@+id/qr_scanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/QR_scanner"
        android:textColor="#3748c1"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/watch_instruction_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textSize="14sp"
        android:textColor="#3748c1"
        android:text="@string/watch_instructions_video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/how_app_works"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/how_app_works"
        android:textSize="14sp"
        android:textColor="#3748c1"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/government_logo"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>