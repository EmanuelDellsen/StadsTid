<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundActive" />
            <gradient android:angle="-90"
                android:startColor="@color/backgroundActive"
                android:endColor="@color/backgroundActive"  />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundActive" />
            <solid android:color="@color/backgroundActive"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/backgroundActive" />
            <gradient android:angle="-90" android:startColor="@color/backgroundActive"
                android:endColor="@color/backgroundActive" />
        </shape>
    </item>
</selector>